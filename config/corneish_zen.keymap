#define Y____ &kp Y
#define Z____ &kp Z

#define AMPS_ &kp AMPS
#define APOS_ &kp APOS
#define AT___ &kp AT
#define BSLH_ &kp BSLH
#define BSPC_ &kp BSPC
#define CARET &kp CARET
