#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/modifiers.h>

#define XXXXX &none
#define _____ &trans

#define GUALT &td0
#define SPCCT &hp LCTRL SPACE
#define L1TAB &lt 1 TAB
#define LY2__ &mo 2
#define LY3__ &mo 3

#define LCTRL &kp LCTRL
#define LSHFT &kp LSHFT
#define MEND_ &kp RG(END)
#define MHOME &kp RG(HOME)

#define A____ &kp A
#define B____ &kp B
#define C____ &kp C
#define D____ &kp D
#define E____ &kp E
#define F____ &kp F
#define G____ &kp G
#define H____ &kp H
