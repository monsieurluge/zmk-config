#define PIPE_ &kp PIPE
#define PLUS_ &kp EQUAL
#define PRCNT &kp PRCNT
#define RBKT_ &kp RBKT
#define RBRC_ &kp RBRC
#define RPAR_ &kp RPAR
#define SEMI_ &kp SEMI
#define TILDE &kp TILDE
#define UNDER &kp UNDER

#define N0___ &kp N0
#define N1___ &kp N1
#define N2___ &kp N2
#define N3___ &kp N3
#define N4___ &kp N4
#define N5___ &kp N5
#define N6___ &kp N6
#define N7___ &kp N7
#define N8___ &kp N8
